<Application x:Class="WpfSkeleton.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!-- Theme Colors -->
        <SolidColorBrush x:Key="BackgroundBrush" Color="White"/>
        <SolidColorBrush x:Key="ForegroundBrush" Color="Black"/>
        <SolidColorBrush x:Key="NavbarBackgroundBrush" Color="LightGray"/>
        <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="#FFE6E6E6"/>
        <SolidColorBrush x:Key="ButtonHoverBrush" Color="#FFC8C8C8"/>
    </Application.Resources>
</Application>

